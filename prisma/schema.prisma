model Product {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  nameAr          String
  description     String?
  descriptionAr   String
  price           Float
  salePrice       Float?
  stock           Int
  images          String[]
  category        String
  categoryId      String?
  ageGroup        String?
  gender          String?  // unisex, boys, girls
  rating          Float    @default(0)
  sales           Int      @default(0)
  featured        Boolean  @default(false)
  badge           String?  // Ø¬Ø¯ÙŠØ¯, Ø£ÙƒØ«Ø± Ù…Ø¨ÙŠØ¹Ø§Ù‹, Ø¹Ø±Ø¶ Ø³Ø§Ø®Ù†, Ù…Ø­Ø¯ÙˆØ¯
  enabled         Boolean  @default(true)
